<h1>Book Update</h1>

<form action="/books/{{this._id}}/edit" method="POST">
    <label for="title">Title
        <input value="{{this.title}}" type="text" name="title">
    </label>
    <label for="author">Author
        <input  value="{{this.author}}" type="text" name="author">
    </label>
    <label for="description">Description
        <input value="{{this.description}}" type="text" name="description">
    </label>
    <label for="rating">Grade
        <input value="{{this.rating}}" type="number" name="rating" min=1 max=10>
    </label>
    <button type="submit">Update book</button>
</form>